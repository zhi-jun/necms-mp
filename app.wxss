/* 去除 cell 上边框 */
.weui-cells:before {
  border-top:none;
}

.search{
  width:98%;
  margin-right: 12rpx;
}

.i-card {
  background-color: #fff;
  margin:  30rpx;
  border-radius: 10rpx;
  box-shadow: 0 2rpx 5rpx rgb(18 18 18 / 10%);
  box-sizing: border-box;
}
.i-card:first-child{
  margin-top: 0rpx;
}

.i-card-title{
  display: flex;
  align-items: center;
  /* background-color: #2BA245; */
  background-color: #514F4D;
  border-radius: 10rpx 10rpx 0 0;
  color:white;
  padding: 0 20rpx;
  height: 50rpx;
  line-height:50rpx;
  font-size: 22rpx;
}
.i-card-title image{
  margin-right: 10rpx;
  height: 40rpx;
  width: 40rpx;
}
.i-card-content{
  padding: 16rpx 20rpx;
  font-size: 24rpx;
  line-height: 46rpx;
  color: #5b5b5b;
}

.card-options{
  height: 80rpx;
  margin: 20rpx 20rpx;
}

.card-options .btn{
  float: right;
  margin-left: 20rpx;
}

.card-label .van-col{
  text-align: right;
  padding-right: 20rpx;
}