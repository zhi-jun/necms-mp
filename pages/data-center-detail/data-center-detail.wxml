<van-dropdown-menu>
  <van-dropdown-item id="item" title="{{ itemTitle }}">
    <van-cell title="{{ switchTitle1 }}">
      <van-switch
        slot="right-icon"
        size="24px"
        style="height: 26px"
        checked="{{ switch1 }}"
        active-color="#ee0a24"
        bind:change="onSwitch1Change"
      />
    </van-cell>
    <van-cell title="{{ switchTitle2 }}">
      <van-switch
        slot="right-icon"
        size="24px"
        style="height: 26px"
        checked="{{ switch2 }}"
        active-color="#ee0a24"
        bind:change="onSwitch2Change"
      />
    </van-cell>
    <view style="padding: 5px 16px;">
      <van-button type="danger" block round bind:click="onConfirm">
        确认
      </van-button>
    </view>
  </van-dropdown-item>
  <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
</van-dropdown-menu>

<van-search value="{{ value }}" placeholder="请输入搜索关键词" />

<!-- 搜索结果 -->
<view wx:for="{{ result }}" wx:key="index">
  <!-- title -->
  <view style="display:flex">
    <van-icon name="chat" />
    <text> 车架号:{{ item.no }} </text>
  </view>
  <view>
    所属机构：企业+下级
所属分组：                    车辆类型：
车牌号：                        总行驶时长：
区间行驶时长：              今日行驶时长：
  </view>
</view>