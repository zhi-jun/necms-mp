<view class="container">
  <van-dropdown-menu style="width:100%;">
    <van-dropdown-item id="item" title="{{ itemTitle }}">
      <van-cell title="{{ switchTitle1 }}">
        <van-switch slot="right-icon" size="24px" style="height: 26px" checked="{{ switch1 }}" active-color="#ee0a24"
          bind:change="onSwitch1Change" />
      </van-cell>
      <van-cell title="{{ switchTitle2 }}">
        <van-switch slot="right-icon" size="24px" style="height: 26px" checked="{{ switch2 }}" active-color="#ee0a24"
          bind:change="onSwitch2Change" />
      </van-cell>
      <view style="padding: 5px 16px;">
        <van-button type="danger" block round bind:click="onConfirm">
          确认
        </van-button>
      </view>
    </van-dropdown-item>
    <van-dropdown-item value="{{ value1 }}" options="{{ option1 }}" />
  </van-dropdown-menu>

  <van-search value="{{ value }}"  use-action-slot placeholder="请输入搜索关键词" style="width:100%;"  bind:change="onChange"  bind:search="onSearch">
      <van-button slot="action" plain hairline type="primary" size="small" bind:click="onClick">搜索</van-button>
  </van-search>
  <!-- 搜索结果 -->
  <view class="container-wrapper">
    <!-- 空数据搜索提示 -->
    <van-empty  wx:if="{{result.length == 0}}" image="search" description="暂无数据" />

    <view wx:for="{{ result }}" wx:key="index" class="i-card">
      <!-- title -->
      <view class="i-card-title">
        <text> 车架号:{{ item.no }} </text>
      </view>
      <view class="i-card-content">
        <text>所属机构：企业+下级</text>
        <van-row>
          <van-col span="12">所属分组：</van-col>
          <van-col span="12">车辆类型：</van-col>
        </van-row>
        <van-row>
          <van-col span="12">车牌号：</van-col>
          <van-col span="12">总行驶时长：</van-col>
        </van-row>
        <van-row>
          <van-col span="12">区间行驶时长：</van-col>
          <van-col span="12">今日行驶时长：</van-col>
        </van-row>
      </view>
    </view>
  </view>
</view>