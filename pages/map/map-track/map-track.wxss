/* pages/map/map.wxss */
.map-track-wrapper{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding-bottom: constant(safe-area-inset-bottom);     /*兼容 iOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom);  /*兼容 iOS>11.2*/
}
.map-track-body{
  flex:auto;
  z-index: inherit;
}

.cover-view{
  flex:none;
  width: 100%;
  background-color: white;
  opacity: 0.7;
  display: inline-flex;
  justify-content: space-around;
  align-items: center;
  text-align: center;
}
.flex-wrp{
  display:flex;
  align-items: center;
  width: 100%;
}

.flex-item{
  flex:1;
  font-size: 32rpx;
  text-align: center;
  padding: 20rpx 0;
}
.flex-item cover-image{
  height: 80rpx;
  width: 80rpx;
  margin: 0 auto;
}

.map-footer{
  flex: none;
  max-height: 40%;
  overflow: hidden;
  flex-direction: column;
  display: flex;
}
.mp-footer-main{
  overflow: auto;
  flex:auto
}
.mp-footer-card {
  padding: 20rpx;
  font-size: 24rpx;
}